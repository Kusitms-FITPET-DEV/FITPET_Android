<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/view_item_add_new_mg3" />

        <View
            android:id="@+id/view_item_add_new_mg1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="16:18"
            app:layout_constraintWidth_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_item_add_new_mg2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="20:16"
            app:layout_constraintWidth_percent="0.0625"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_item_add_new_mg3" />


        <ImageView
            android:id="@+id/iv_icon_pet_species"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/ic_mypet_dog"
            app:layout_constraintTop_toBottomOf="@id/view_item_add_new_mg1"
            app:layout_constraintStart_toEndOf="@id/view_item_add_new_mg1" />

        <TextView
            android:id="@+id/tv_item_my_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보리"
            android:layout_marginStart="16dp"
            android:textAppearance="@style/b3_S"
            app:layout_constraintTop_toTopOf="@id/iv_icon_pet_species"
            app:layout_constraintStart_toEndOf="@id/iv_icon_pet_species" />

        <TextView
            android:id="@+id/tv_item_my_pet_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(@string/pet_info(vm.uiState.petInfo.age, vm.uiState.petInfo.breed))}"
            android:textAppearance="@style/insurance_pet_info"
            app:layout_constraintStart_toStartOf="@id/tv_item_my_pet_name"
            app:layout_constraintBottom_toBottomOf="@id/iv_icon_pet_species" />

        <ImageView
            android:id="@+id/iv_edit_icon"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_edit"
            app:layout_constraintTop_toTopOf="@id/iv_icon_pet_species"
            app:layout_constraintEnd_toStartOf="@id/view_item_add_new_mg2" />

        <View
            android:id="@+id/view_item_add_new_mg3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="16:18"
            app:layout_constraintWidth_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_icon_pet_species" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>