<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clInsurance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main">

        <View
            android:id="@+id/viewInsuranceMg1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="20:35"
            app:layout_constraintWidth_percent="0.0556"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/viewInsuranceMg2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="20:35"
            app:layout_constraintWidth_percent="0.0556"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInsuranceMypetBoxBg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintDimensionRatio="320:212"
            app:layout_constraintWidth_percent="0.8889"
            app:layout_constraintStart_toEndOf="@id/viewInsuranceMg1"
            app:layout_constraintEnd_toStartOf="@id/viewInsuranceMg2"
            app:layout_constraintTop_toBottomOf="@id/viewInsuranceMg1"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="3dp"
                app:layout_constraintStart_toStartOf="@id/cvInsuranceMypetBoxBg"
                app:layout_constraintEnd_toEndOf="@id/cvInsuranceMypetBoxBg"
                app:layout_constraintTop_toTopOf="@id/cvInsuranceMypetBoxBg"
                app:layout_constraintBottom_toBottomOf="@id/cvInsuranceMypetBoxBg">

                <View
                    android:id="@+id/viewInsuranceBoxMg1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="20:20"
                    app:layout_constraintWidth_percent="0.0625"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:id="@+id/viewInsuranceBoxMg2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="20:20"
                    app:layout_constraintWidth_percent="0.0625"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/ivInsuranceBoxPlus"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="32:32"
                    app:layout_constraintWidth_percent="0.1"
                    android:background="@drawable/ic_circle_add_mypet"
                    app:layout_constraintStart_toEndOf="@id/viewInsuranceBoxMg1"
                    app:layout_constraintTop_toBottomOf="@id/viewInsuranceBoxMg1"/>

                <ImageView
                    android:id="@+id/ivInsuranceBoxTriangle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintDimensionRatio="17:14"
                    app:layout_constraintWidth_percent="0.045"
                    android:background="@drawable/ic_triangle_mypet"
                    app:layout_constraintStart_toEndOf="@id/ivInsuranceBoxPlus"
                    app:layout_constraintTop_toTopOf="@id/ivInsuranceBoxPlus"
                    app:layout_constraintBottom_toBottomOf="@id/ivInsuranceBoxPlus"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clInsuranceBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/ivInsuranceBoxPlus"
                    app:layout_constraintTop_toBottomOf="@id/ivInsuranceBoxPlus"
                    app:layout_constraintEnd_toEndOf="@id/btnGoToMypet"
                    app:layout_constraintBottom_toTopOf="@id/btnGoToMypet">

                    <TextView
                        android:id="@+id/tvInsuranceBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/b3_S"
                        android:text="@string/insurance_no_register_box1"
                        />

                    <TextView
                        android:id="@+id/tvInsuranceBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/insurance_box_light"
                        android:textColor="@color/neutral_400"
                        android:text="@string/insurance_no_register_box2"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/tvInsuranceBox1"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGoToMypet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/go_to_mypet"
                    android:textAppearance="@style/b2_S"
                    android:textColor="@color/white"
                    android:stateListAnimator="@null"
                    android:background="@drawable/bg_rectangle_filled_point_blue_radius_8"
                    app:layout_constraintStart_toEndOf="@id/viewInsuranceBoxMg1"
                    app:layout_constraintEnd_toStartOf="@id/viewInsuranceBoxMg2"
                    app:layout_constraintBottom_toTopOf="@id/viewInsuranceBoxMg2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>