<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_item_insurance_mg2"
        />

    <View
        android:id="@+id/view_item_insurance_mg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:16"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view_item_insurance_mg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:16"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_insurance_price_won"/>


    <TextView
        android:id="@+id/tv_item_insurance_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DB손해보험"
        android:textAppearance="@style/b3_S"
        app:layout_constraintTop_toBottomOf="@id/view_item_insurance_mg1"
        app:layout_constraintStart_toEndOf="@id/view_item_insurance_mg1"
        />

    <TextView
        android:id="@+id/tv_item_insurance_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="펫블리 반려견보험"
        android:layout_marginTop="3dp"
        android:textAppearance="@style/b5"
        app:layout_constraintTop_toBottomOf="@id/tv_item_insurance_company"
        app:layout_constraintStart_toStartOf="@id/tv_item_insurance_company"
        />

    <ImageView
        android:id="@+id/iv_item_insurance_company"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="113:24"
        app:layout_constraintWidth_percent="0.35"
        android:src="@drawable/ic_insurance_db"
        app:layout_constraintEnd_toStartOf="@id/view_item_insurance_mg2"
        app:layout_constraintTop_toBottomOf="@id/view_item_insurance_mg1"
        />

    <TextView
        android:id="@+id/tv_item_insurance_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="50,000"
        android:textAppearance="@style/b1_S"
        app:layout_constraintTop_toBottomOf="@id/tv_item_insurance_name"
        app:layout_constraintEnd_toStartOf="@id/tv_item_insurance_price_won"
        />

    <TextView
        android:id="@+id/tv_item_insurance_price_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insurance_no_register_pet_box_won"
        android:textAppearance="@style/b3_M"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_insurance_price"
        app:layout_constraintEnd_toStartOf="@id/view_item_insurance_mg2"
        />

    <View
        android:id="@+id/view_item_insurance_mg3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="12:12"
        app:layout_constraintWidth_percent="0.0375"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_item_insurance_mg2"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>