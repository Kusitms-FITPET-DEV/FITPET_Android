<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/bg_primary"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_item_insurance_mg2"
        />

    <View
        android:id="@+id/view_item_insurance_mg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="12:12"
        app:layout_constraintWidth_percent="0.0375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view_item_insurance_mg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="12:12"
        app:layout_constraintWidth_percent="0.0375"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_icon_pet_species"/>


    <ImageView
        android:id="@+id/iv_icon_pet_species"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_mypet_dog"
        app:layout_constraintTop_toBottomOf="@id/view_item_insurance_mg1"
        app:layout_constraintStart_toEndOf="@id/view_item_insurance_mg1"
        />

    <TextView
        android:id="@+id/tv_item_my_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보리"
        android:layout_marginStart="12dp"
        android:textAppearance="@style/b3_S"
        app:layout_constraintTop_toTopOf="@id/iv_icon_pet_species"
        app:layout_constraintBottom_toTopOf="@id/view_item_insurance_mg2"
        app:layout_constraintStart_toEndOf="@id/iv_icon_pet_species"
        />

    <ImageView
        android:id="@+id/iv_edit_icon"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_edit"
        app:layout_constraintTop_toTopOf="@id/iv_icon_pet_species"
        app:layout_constraintBottom_toTopOf="@id/view_item_insurance_mg2"
        app:layout_constraintEnd_toStartOf="@id/view_item_insurance_mg2"
        />



    <View
        android:id="@+id/view_item_insurance_mg3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="12:12"
        app:layout_constraintWidth_percent="0.0375"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_item_insurance_mg2"/>


</androidx.constraintlayout.widget.ConstraintLayout>