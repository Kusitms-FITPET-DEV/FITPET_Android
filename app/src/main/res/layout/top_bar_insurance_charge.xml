<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/btn_top_bar_insurance_charge_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginVertical="18dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_top_bar_insurance_charge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insurance_charge"
        android:textAppearance="@style/b3"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/btn_top_bar_insurance_charge_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_top_bar_insurance_charge_back" />

    <View
        android:id="@+id/divider_top_bar_insurance_charge"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neutral_100"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>